@{
    ViewBag.Title = "Thanh toán thất bại";
}

<div class="container">
    <div class="failure-box">
        <h1 class="failure-title">Thanh toán thất bại</h1>
        <p class="failure-message">@ViewBag.Message</p>
        <p class="order-id"><strong>Mã đơn hàng:</strong> @ViewBag.OrderId</p>
        <div class="action-container">
            <a href="/Payment/Index" class="btn btn-custom">Quay lại giỏ hàng</a>
        </div>
    </div>
</div>

<style>
    /* Tổng quan */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f8f8; /* Nền sáng */
        color: #333; /* Màu văn bản tối */
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px; /* Đảm bảo không bị cắt trên màn hình nhỏ */
    }

    /* Hộp thông báo thất bại */
    .failure-box {
        background-color: #fff; /* Nền trắng */
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%; /* Chiều rộng 100% cho màn hình nhỏ */
        max-width: 500px; /* Giới hạn chiều rộng cho màn hình lớn */
        text-align: center; /* Căn giữa nội dung */
    }

    /* Tiêu đề */
    .failure-title {
        font-size: 28px; /* Kích thước lớn hơn để nổi bật */
        font-weight: bold;
        color: #e74c3c; /* Màu đỏ đậm */
        margin-bottom: 20px;
    }

    /* Tin nhắn lỗi */
    .failure-message {
        font-size: 16px;
        color: #555;
        margin-bottom: 10px;
    }

    /* Mã đơn hàng */
    .order-id {
        font-size: 14px;
        color: #333;
        margin-bottom: 20px;
    }

    /* Nút quay lại */
    .btn-custom {
        display: inline-block;
        text-decoration: none;
        background-color: #222; /* Nút màu đen */
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        transition: background 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #444; /* Nút chuyển màu khi hover */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); /* Đổ bóng nhẹ */
        }

    /* Khoảng cách các phần tử */
    .action-container {
        margin-top: 20px;
    }
</style>
