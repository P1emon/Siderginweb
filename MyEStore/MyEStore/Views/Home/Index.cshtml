@{
    ViewData["Title"] = "Home Page";
}
@Html.Partial("livechat")
<link rel="stylesheet" href="~/css/Home.css" />

<div class="homepage-container">
    <!-- Phần giới thiệu -->
    <div class="intro-section">
        <h1 class="welcome-text">Chào mừng bạn đến với trang Web của chúng tôi</h1>
        <p class="subtitle">Cùng chúng tôi khám phá những sản phẩm tuyệt vời phù hợp với lối sống của bạn</p>
        <a href="~/Products" class="start-shopping-btn">Mua sắm ngay</a>
    </div>

    <!-- Hiện thông tin về chúng tôi -->
    <footer class="about-us-section hidden">
        <h2>About Us</h2>
        <div class="about-us-container">
            <div class="about-us-item">
                <img src="~/Hinh/Others/khang.jpg" alt="Nguyễn Hòa Khang" class="about-us-icon" />
                <p class="about-us-caption">Nguyễn Hòa Khang</p>
            </div>
            <div class="about-us-item">
                <img src="~/Hinh/Others/ka.jpg" alt="Đỗ Hoàng Ka" class="about-us-icon" />
                <p class="about-us-caption">Đỗ Hoàng Ka</p>
            </div>
            <div class="about-us-item">
                <img src="~/Hinh/Others/khoa.jpg" alt="Phan Nguyễn Đăng Khoa" class="about-us-icon" />
                <p class="about-us-caption">Phan Nguyễn Đăng Khoa</p>
            </div>
            <div class="about-us-item">
                <img src="~/Hinh/Others/duc.jpg" alt="Trường Minh Đức" class="about-us-icon" />
                <p class="about-us-caption">Trường Minh Đức</p>
            </div>
        </div>
    </footer>
</div>

<script>
    document.addEventListener("scroll", () => {
        const aboutUsSection = document.querySelector(".about-us-section");
        const windowHeight = window.innerHeight;
        const sectionTop = aboutUsSection.getBoundingClientRect().top;

        if (sectionTop < windowHeight * 0.5) {
            aboutUsSection.classList.add("visible");
        }
    });
</script>