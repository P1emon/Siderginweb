@using MyEStore.Helpers
@model MyEStore.Entities.HangHoa
@Html.Partial("livechat")

<!-- Thẻ Open Graph -->
<meta property="og:title" content="@Model.TenHh" />
<meta property="og:description" content="Thông tin sản phẩm: @Model.TenHh - Giá: @Decimal.Parse(@Model.DonGia.ToString()).ToString("N0") đ" />
<meta property="og:image" content="@Url.Content(ViewData["ImageUrl"] as string)" />
<meta property="og:url" content="@Url.Action("Detail", "Products", new { categorySlug = ViewData["ExpectedSlug"], productSlug = Model.TenAlias })" />
<meta property="og:type" content="product" />

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="container py-5">
    <div class="row g-4">
        <!-- Phần Hình Ảnh -->
        <div class="col-lg-5">
            <div class="card shadow-sm border-0">
                <img src="@Url.Content(ViewData["ImageUrl"] as string)" alt="@Model.TenHh" class="img-fluid rounded" style="object-fit: cover; max-height: 400px;" />
            </div>
        </div>

        <!-- Thông Tin Sản Phẩm -->
        <div class="col-lg-7">
            <div class="card shadow-sm border-0 p-4">
                <h1 class="fw-bold mb-3" style="font-size: 1.8rem;">@Model.TenHh</h1>
                <h2 class="text-danger fw-bold mb-3" style="font-size: 1.5rem;">
                    @Decimal.Parse(@Model.DonGia.ToString()).ToString("N0") đ
                </h2>
                <p class="text-muted mb-2"><strong>Quy cách đóng gói:</strong> @Model.HangHoaChiTiet?.QuyCachDongGoi</p>
                <p class="text-muted mb-4" style="line-height: 1.8;">@Model.MoTa</p>

                <!-- Form Thêm Vào Giỏ Hàng -->
                <form asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.MaHh" class="mb-4">
                    <div class="d-flex align-items-center">
                        <label for="qty" class="me-3 fw-bold">Số lượng:</label>
                        <input type="number" name="qty" value="1" min="1" class="form-control me-3" style="width: 80px;" />
                        <button class="btn btn-primary btn-lg" style="background: #1d3557; border: none;">Thêm vào giỏ</button>
                    </div>
                </form>

                <!-- Chia Sẻ -->
                <div class="social-share">
                    <p class="fw-bold mb-2">Chia sẻ sản phẩm:</p>
                    <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
                        <a class="a2a_button_facebook"></a>
                        <a class="a2a_button_twitter"></a>
                        <a class="a2a_button_pinterest"></a>
                        <a class="a2a_button_whatsapp"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tab Chi Tiết -->
    <div class="card shadow-sm border-0 mt-5">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#ingredients">Thành phần</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#usage">Công dụng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#technology">Công nghệ đặc biệt</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#benefits">Lợi ích nổi bật</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#notes">Lưu ý</a>
                </li>
            </ul>
        </div>
        <div class="card-body tab-content">
            <!-- Thành phần -->
            <div class="tab-pane fade show active" id="ingredients">
                <h4 class="fw-bold mb-3">Thành phần chính</h4>
                <p>@Model.HangHoaChiTiet?.ThanhPhan</p>
            </div>
            <!-- Công dụng -->
            <div class="tab-pane fade" id="usage">
                <h4 class="fw-bold mb-3">Công dụng chi tiết</h4>
                <p>@Model.HangHoaChiTiet?.CongDung</p>
                <h5 class="mt-3">Đối tượng sử dụng</h5>
                <p>@Model.HangHoaChiTiet?.DoiTuongSuDung</p>
            </div>
            <!-- Công nghệ đặc biệt -->
            <div class="tab-pane fade" id="technology">
                <h4 class="fw-bold mb-3">Công nghệ và đặc điểm nổi bật</h4>
                <p>@Model.HangHoaChiTiet?.CongNgheDacBiet</p>
            </div>
            <!-- Lợi ích nổi bật -->
            <div class="tab-pane fade" id="benefits">
                <h4 class="fw-bold mb-3">Lợi ích nổi bật</h4>
                <p>@Model.HangHoaChiTiet?.LoiIchNoiBat</p>
            </div>
            <!-- Lưu ý -->
            <div class="tab-pane fade" id="notes">
                <h4 class="fw-bold mb-3">Lưu ý khi sử dụng</h4>
                <p>@Model.HangHoaChiTiet?.LuuY</p>
            </div>
        </div>
    </div>
</div>

<script async src="https://static.addtoany.com/menu/page.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .nav-tabs .nav-link {
        color: #333;
        font-weight: 500;
        border: none;
        border-bottom: 2px solid transparent;
    }

        .nav-tabs .nav-link.active {
            color: #1d3557;
            border-bottom: 2px solid #1d3557;
        }

    .btn-primary {
        background-color: #1d3557;
        border: none;
        padding: 10px 20px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #457b9d;
        }

    .social-share .a2a_button_facebook {
        background: #3b5998;
        border-radius: 50%;
    }

    .social-share .a2a_button_twitter {
        background: #1da1f2;
        border-radius: 50%;
    }

    .social-share .a2a_button_pinterest {
        background: #bd081c;
        border-radius: 50%;
    }

    .social-share .a2a_button_whatsapp {
        background: #25d366;
        border-radius: 50%;
    }
</style>