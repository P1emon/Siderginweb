@model List<ThongBaonewModel>


@{
    ViewData["Title"] = "Danh sách Thông Báo";
}

<div class="container my-4">
    <h2 class="mb-4">Thông Báo Đang Hiển Thị</h2>

    @if (Model.Any())
    {
            <div class="row">
            @foreach (var slider in Model)
            {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                        <img src="~/Hinh/HangHoa/@slider.HinhAnh" class="card-img-top" alt="@slider.TieuDe" style="max-height: 200px; object-fit: cover;">
                                                  
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="@slider.LinkQuangCao" target="_blank">@slider.TieuDe</a>
                                    </h5>
                                    <p class="card-text">@slider.MoTa</p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            Ngày tạo: @slider.NgayTao.ToString("dd/MM/yyyy")<br>
                                            Hiệu lực: @slider.NgayBatDau.ToString("dd/MM/yyyy") - @slider.NgayKetThuc.ToString("dd/MM/yyyy")
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>
            }
            </div>
    }
    else
    {
            <div class="alert alert-info">
                Hiện tại không có thông báo nào đang hiển thị.
            </div>
    }
</div>