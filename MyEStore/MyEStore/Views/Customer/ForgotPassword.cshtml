@{
    ViewBag.Title = "Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên Mật Khẩu | MyEStore</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/forgotpassword.css" />

</head>
<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loading-overlay">
        <div class="spinner"></div>
        <div class="loading-text">Đang kiểm tra vui lòng chờ một xíu...</div>
    </div>

    <div class="container min-vh-100 d-flex align-items-center justify-content-center py-5">
        <div class="forgot-password-container row g-0">
            <!-- Left side illustration -->
            <div class="col-md-6 forgot-left">
                <div class="animate-pattern"></div>
                <div class="floating-shape shape-1"></div>
                <div class="floating-shape shape-2"></div>

                <div class="forgot-left-content">
                    <div class="d-flex justify-content-center">
                        <div class="security-icon">
                            <i class="fas fa-key"></i>
                        </div>
                    </div>

                    <h2 class="text-center mb-4">Lấy lại mật khẩu</h2>
                    <p class="text-center mb-4">Quên mật khẩu? Đừng lo lắng. Chúng tôi sẽ gửi cho bạn mật khẩu và hướng dẫn đặt lại mật khẩu.</p>

                    <div class="info-list">
                        <li><i class="fas fa-envelope"></i> Nhập địa chỉ email bạn đã đăng ký</li>
                        <li><i class="fas fa-check-circle"></i> Bạn sẽ nhận được email hướng dẫn</li>
                        <li><i class="fas fa-lock-open"></i> Làm theo hướng dẫn để tạo mật khẩu mới</li>
                        <li><i class="fas fa-shield-alt"></i> Thông tin của bạn luôn được bảo mật</li>
                    </div>

                    <div class="mt-5">
                        <div class="text-center">
                            <h5 class="mb-3">Hỗ trợ khách hàng</h5>
                            <p class="mb-1"><i class="fas fa-phone-alt me-2"></i> Hotline: 1900 1234</p>
                            <p><i class="fas fa-envelope me-2"></i> Email: support@sidergin.com</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right side form -->
            <div class="col-md-6 bg-white p-4 p-md-5 forgot-right">
                <div class="text-center mb-4">
                    <h3 class="fw-bold">Quên <span class="text-highlight">Mật Khẩu</span></h3>
                    <p class="text-muted">Nhập email của bạn để nhận mật khẩu và hướng dẫn đặt lại mật khẩu</p>
                </div>

                <div class="steps">
                    <div class="step active" id="step1">
                        <div class="step-number">1</div>
                        <div class="step-name">Nhập Email</div>
                    </div>
                    <div class="step" id="step2">
                        <div class="step-number">2</div>
                        <div class="step-name">Kiểm tra Email</div>
                    </div>
                    <div class="step" id="step3">
                        <div class="step-number">3</div>
                        <div class="step-name">Về trang đăng nhập</div>
                    </div>
                </div>

                <!-- Error Message -->
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <div>@ViewBag.ErrorMessage</div>
                        </div>
                    </div>
                }

                <!-- Step 1: Enter Email Form -->
                <div id="step1-form" class="step-form active">
                    <form asp-action="ForgotPassword" method="post" id="password-reset-form">
                        <div class="mb-4">
                            <label for="email" class="form-label">Địa chỉ Email</label>
                            <div class="email-input-container">
                                <i class="fas fa-envelope email-icon"></i>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Nhập địa chỉ email của bạn" required />
                            </div>
                            <small class="form-text text-muted mt-2">Chúng tôi sẽ gửi email mật khẩu mới và hướng dẫn đặt lại mật khẩu đến địa chỉ này.</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-reset">
                                <i class="fas fa-paper-plane me-2"></i>Gửi mật khẩu
                            </button>
                            <a href="/Customer/Login" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay Lại Đăng Nhập
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Step 2: Check Email -->
                <div id="step2-form" class="step-form">
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle me-2"></i>
                                <div>@ViewBag.SuccessMessage</div>
                            </div>
                        </div>
                    }
                    <div class="text-center my-4">
                        <div class="big-icon mb-3">
                            <i class="fas fa-envelope-open-text"></i>
                        </div>
                        <h4>Đã gửi thông tin đến email của bạn</h4>
                        <p>Chúng tôi đã gửi email chứa mật khẩu mới đến địa chỉ email của bạn.</p>
                        <p>Vui lòng kiểm tra hộp thư (và thư mục spam) để xem mật khẩu mới.</p>
                    </div>
                </div>

                <!-- Step 3: Back to Login -->
                <div id="step3-form" class="step-form">
                    <div class="text-center my-4">
                        <div class="big-icon success-icon mb-3">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <h4>Đã gửi mật khẩu mới thành công!</h4>
                        <p>Vui lòng kiểm tra hộp thư và thư mục spam để xem mật khẩu mới.</p>
                        <p>Bạn sẽ được chuyển về trang đăng nhập trong <span id="countdown-timer" class="countdown-timer">6</span> giây.</p>
                    </div>

                </div>

                <div class="text-center mt-4">
                    <p class="text-muted">
                        Đã nhớ mật khẩu? <a href="/Customer/Login" class="login-link animated-text">Đăng nhập</a>
                    </p>
                    <p class="text-muted">
                        Chưa có tài khoản? <a href="/Customer/Register" class="login-link animated-text">Đăng ký ngay</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Hide all step forms except the first one
        document.addEventListener("DOMContentLoaded", function () {
            const stepForms = document.querySelectorAll('.step-form');
            stepForms.forEach(form => {
                if (!form.classList.contains('active')) {
                    form.style.display = 'none';
                }
            });

            // Check if we have a success message (gửi email thành công)
            if (document.querySelector(".alert-success")) {
                processSuccessfulEmailSent();
            }
        });

        // Display loading overlay on form submit
        document.getElementById("password-reset-form").addEventListener("submit", function () {
            document.getElementById("loading-overlay").classList.add("active");
        });

        // Hide loading overlay when the page is fully loaded
        window.addEventListener("load", function () {
            document.getElementById("loading-overlay").classList.remove("active");
        });

        // Function to handle successful email sent
        function processSuccessfulEmailSent() {
            // Go to step 2 first
            goToStep(2);

            // After 3 seconds, automatically move to step 3
            setTimeout(function () {
                goToStep(3);
                startCountdown(); // Start countdown to redirect
            }, 3000);
        }

        // Function to navigate between steps
        function goToStep(stepNumber) {
            // Hide all forms
            const stepForms = document.querySelectorAll('.step-form');
            stepForms.forEach(form => {
                form.style.display = 'none';
                form.classList.remove('active');
            });

            // Reset all step indicators
            const steps = document.querySelectorAll('.step');
            steps.forEach((step, index) => {
                step.classList.remove('active', 'completed');
                if (index < stepNumber - 1) {
                    step.classList.add('completed');
                }
            });

            // Activate current step
            document.getElementById(`step${stepNumber}`).classList.add('active');

            // Show current form
            const currentForm = document.getElementById(`step${stepNumber}-form`);
            if (currentForm) {
                currentForm.style.display = 'block';
                currentForm.classList.add('active');
            }
        }

        // Countdown timer for redirect after successful password reset
        function startCountdown() {
            let countdownNumber = 6; // Changed to 6 seconds as requested
            const countdownTimer = document.getElementById("countdown-timer");

            if (countdownTimer) {
                const countdownInterval = setInterval(function () {
                    countdownNumber--;
                    countdownTimer.textContent = countdownNumber;

                    // When countdown reaches 0, redirect to login page
                    if (countdownNumber === 0) {
                        clearInterval(countdownInterval);
                        window.location.href = "/Customer/Login"; // Redirect to login page
                    }
                }, 1000); // Decrease the timer every second
            }
        }

        // Email input animation
        document.getElementById("email").addEventListener("focus", function () {
            this.parentElement.style.transform = "translateY(-3px)";
            this.parentElement.style.transition = "all 0.3s ease";
        });

        document.getElementById("email").addEventListener("blur", function () {
            this.parentElement.style.transform = "translateY(0)";
        });
    </script>

</body>
</html>