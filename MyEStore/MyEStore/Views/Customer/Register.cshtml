@model MyEStore.Models.RegisterVM
@Html.Partial("livechat") 
@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100" style="background-color: #f8f9fa;">
    <div class="p-5 rounded shadow-lg" style="background-color: #ffffff; max-width: 500px; width: 100%;">
        <h2 class="text-center fw-bold mb-4" style="color: #000;">Tạo tài khoản của bạn</h2>
        <p class="text-center text-muted mb-4">Hãy tham gia để mua sắm củng chúng tôi ngay hôm nay!</p>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="text-danger mb-3">@ViewBag.ThongBao</div>
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label fw-bold">Tên tài khoản</label>
                <input asp-for="UserName" class="form-control" style="border: 1px solid #ddd; border-radius: 5px;" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label fw-bold">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" style="border: 1px solid #ddd; border-radius: 5px;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label fw-bold">Họ và Tên</label>
                <input asp-for="FullName" class="form-control" style="border: 1px solid #ddd; border-radius: 5px;" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" type="email" class="form-control" style="border: 1px solid #ddd; border-radius: 5px;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-dark btn-lg">Đăng ký</button>
            </div>
        </form>
        <p class="text-center mt-4 text-muted">
            Bạn đã có tài khoản?
            <a href="/Customer/Login" class="text-decoration-none" style="color: #000;">Đăng nhập</a>
        </p>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
}
