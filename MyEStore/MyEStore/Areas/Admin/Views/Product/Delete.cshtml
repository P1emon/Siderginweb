@model MyEStore.Entities.HangHoa
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h2 class="mt-4">Xác nhận xóa sản phẩm</h2>

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Cảnh báo</h4>
        <p>Bạn có chắc chắn muốn xóa sản phẩm này? Dữ liệu sẽ không thể khôi phục sau khi xóa.</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-trash mr-1"></i>
            Thông tin sản phẩm sẽ bị xóa
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.Hinh))
                    {
                        <img src="~/images/products/@Model.Hinh" alt="@Model.TenHh" class="img-fluid mb-3" style="max-height: 200px;" />
                    }
                    else
                    {
                        <img src="~/images/no-image.png" alt="No Image" class="img-fluid mb-3" style="max-height: 200px;" />
                    }
                </div>
                <div class="col-md-8">
                    <h3>@Model.TenHh</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Mã sản phẩm:</dt>
                        <dd class="col-sm-8">@Model.MaHh</dd>

                        <dt class="col-sm-4">Loại sản phẩm:</dt>
                        <dd class="col-sm-8">@Model.MaLoaiNavigation?.TenLoai</dd>

                        <dt class="col-sm-4">Nhà cung cấp:</dt>
                        <dd class="col-sm-8">@Model.MaNccNavigation?.TenCongTy</dd>

                        <dt class="col-sm-4">Đơn giá:</dt>
                        <dd class="col-sm-8">@Model.DonGia?.ToString("N0") VNĐ</dd>

                        <dt class="col-sm-4">Số lượng:</dt>
                        <dd class="col-sm-8">@Model.SoLuong</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="MaHh" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </form>
        </div>
    </div>
</div>