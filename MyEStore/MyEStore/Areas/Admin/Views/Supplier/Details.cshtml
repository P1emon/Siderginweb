@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Supplier Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h1>Supplier Details</h1>
        @model MyEStore.Entities.NhaCungCap
        <dl class="row">
            <dt class="col-sm-2">Supplier ID</dt>
            <dd class="col-sm-10">@Model.MaNcc</dd>
            <dt class="col-sm-2">Company Name</dt>
            <dd class="col-sm-10">@Model.TenCongTy</dd>
            <dt class="col-sm-2">Logo</dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.Logo))
                {
                        <img src="@Model.Logo" alt="Logo" style="max-width: 200px;" />
                }
                else
                {
                        <span>No logo available</span>
                }
            </dd>
            <dt class="col-sm-2">Contact Person</dt>
            <dd class="col-sm-10">@Model.NguoiLienLac</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>
            <dt class="col-sm-2">Phone</dt>
            <dd class="col-sm-10">@Model.DienThoai</dd>
            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.DiaChi</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.MoTa</dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.MaNcc" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>