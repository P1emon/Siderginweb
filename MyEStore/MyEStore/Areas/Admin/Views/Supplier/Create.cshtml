@model MyEStore.Entities.NhaCungCap
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Thêm nhà cung cấp";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="MaNcc" class="form-label"></label>
        <input asp-for="MaNcc" class="form-control" />
        <span asp-validation-for="MaNcc" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TenCongTy" class="form-label"></label>
        <input asp-for="TenCongTy" class="form-control" />
        <span asp-validation-for="TenCongTy" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Logo" class="form-label">Logo</label>
        <input type="file" name="LogoFile" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="NguoiLienLac" class="form-label"></label>
        <input asp-for="NguoiLienLac" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DienThoai" class="form-label"></label>
        <input asp-for="DienThoai" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="DiaChi" class="form-label"></label>
        <input asp-for="DiaChi" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="MoTa" class="form-label"></label>
        <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
