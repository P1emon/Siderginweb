@model MyEStore.Entities.Loai
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Chi tiết loại hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Chi tiết loại hàng
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Mã loại:</dt>
                        <dd class="col-sm-8">@Model.MaLoai</dd>

                        <dt class="col-sm-4">Tên loại:</dt>
                        <dd class="col-sm-8">@Model.TenLoai</dd>

                        <dt class="col-sm-4">Tên loại Alias:</dt>
                        <dd class="col-sm-8">@(Model.TenLoaiAlias ?? "Không có")</dd>

                        <dt class="col-sm-4">Mô tả:</dt>
                        <dd class="col-sm-8">@(Model.MoTa ?? "Không có mô tả")</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h5>Hình ảnh:</h5>
                    @if (!string.IsNullOrEmpty(Model.Hinh))
                    {
                        <img src="~/images/categories/@Model.Hinh" alt="@Model.TenLoai" class="img-fluid" style="max-width: 300px;" />
                    }
                    else
                    {
                        <p>Không có hình ảnh</p>
                    }
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.MaLoai" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Trở về danh sách
                </a>
            </div>
        </div>
    </div>
</div>